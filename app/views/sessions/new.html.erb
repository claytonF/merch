<h1>Log in</h1>

<!-- need to specify that this is going to a singular resource not a resources - so have to specify the path for simple form -->
<%= simple_form_for :session, url: session_path, method: :post do |f| %>
	<%= f.input :email %>
	<%= f.input :password %>

	<%= f.button :submit, "Log in" %>
<% end %>


<small>Don't have an account? <%= link_to "Sign up", new_user_path %></small>


